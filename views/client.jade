doctype 5
html
  head
    title= path
  body
    - for ( var i in path_detail)
        a(href= path_detail[i].url)
            |#{ path_detail[i].name }
    br
    |Total #{ total }
    br
    table
        tr
            th
                |MOD
            th
                |TMP
            TH
                |USER
            TH
                |GROUP
            TH
                |SIZE
            TH
                |MONTH
            TH
                |DATE
            TH
                |TIME
            TH
                |URL
        - for ( var i in items)
            tr
                td= items[i].mod
                td= items[i].tmp
                td= items[i].user
                td= items[i].group
                td= items[i].size
                td= items[i].month
                td= items[i].date
                td= items[i].time
                td
                    - if (items[i].info.type == 'd')
                        a(href= items[i].info.dir.url)
                            |#{ i }
                    - else if (items[i].info.type == 'l')
                        -if(typeof items[i].info.ln !== "undefined")
                            a(href= items[i].info.ln.target)
                                |#{ items[i].info.ln.name }
                            | 
                            |-> 
                            - for ( var j in items[i].info.ln.path)
                                a(href= items[i].info.ln.path[j].url)
                                    |#{ items[i].info.ln.path[j].name }
                        -else
                            div(style= "color: #FF0000;")
                                |#{ i }
                    - else
                        a(href= items[i].info.file.url)
                            |#{ i }