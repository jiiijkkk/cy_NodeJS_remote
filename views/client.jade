doctype 5
html
  head
    title= path
  body
    - for ( var i in path_detail)
        -if (typeof path_detail[i].url === "undefined")
            |#{ path_detail[i].name }
        -else
            a(href= prepath_explorer + path_detail[i].url)
                |#{ path_detail[i].name }
    br
    form(method="POST", enctype="multipart/form-data", action= prepath_upload +  path)
        input(type= "file", name= "file")
        br
        input(type= "Submit", value= "Upload")
    br
    |Total #{ total }
    br
    table
        tr
            th
                |MOD
            th
                |TMP
            th
                |USER
            th
                |GROUP
            th
                |SIZE
            th
                |MONTH
            th
                |DATE
            th
                |TIME
            th
                |URL
            th
        - for ( var i in items)
            tr
                td= items[i].mod
                td= items[i].tmp
                td= items[i].user
                td= items[i].group
                td= items[i].size
                td= items[i].month
                td= items[i].date
                td= items[i].time
                td
                    - if (items[i].info.type == 'd')
                        a(href= prepath_explorer + items[i].info.dir.url)
                            |#{ i }
                    - else if (items[i].info.type == 'l')
                        -if(typeof items[i].info.ln !== "undefined")
                            a(href= prepath_explorer + items[i].info.ln.target)
                                |#{ items[i].info.ln.name }
                            | 
                            |-> 
                            - for ( var j in items[i].info.ln.path)
                                - if(typeof items[i].info.ln.path[j].url === "undefined")
                                    |#{ items[i].info.ln.path[j].name }
                                - else
                                    a(href= prepath_explorer + items[i].info.ln.path[j].url)
                                        |#{ items[i].info.ln.path[j].name }
                        -else
                            div(style= "color: #FF0000;")
                                |#{ i }
                    - else if (items[i].info.type == '-')
                        a(href= prepath_view + items[i].info.file.url)
                            |#{ i }
                    - else
                        |#{ i }
                td
                    - if (items[i].info.type == '-')
                        a(href= prepath_download + items[i].info.file.url)
                            |Download